---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <slot />

    <script>
      // Keep scroll restoration manual so reloads don't preserve previous scroll
      if ("scrollRestoration" in history) history.scrollRestoration = "manual";

      document.addEventListener("DOMContentLoaded", function () {
        // ensure we start at the top on load
        window.scrollTo(0, 0);
      });

      // Delegate anchor handling: smooth-scroll for same-page hashes, open external links in new tab
      document.addEventListener("click", function (e) {
        var a = e.target.closest && e.target.closest("a");
        if (!a) return;
        var href = a.getAttribute("href");
        if (!href) return;

        // same-page hash navigation
        if (href.charAt(0) === "#") {
          e.preventDefault();
          var target = document.querySelector(href);
          if (target) {
            // quick smooth scroll
            target.scrollIntoView({ behavior: "smooth", block: "start" });
          }
          return;
        }

        // otherwise open links in a new tab (external or internal absolute links)
        // keep mailto and tel as-is
        if (href.startsWith("mailto:") || href.startsWith("tel:")) return;
        // allow same-origin anchors that navigate to a different page to open in same tab
        try {
          var url = new URL(href, location.href);
          if (url.origin === location.origin) {
            // internal link â€” open in new tab per your request
            a.setAttribute("target", "_blank");
            a.setAttribute("rel", "noopener noreferrer");
            return;
          }
        } catch (err) {
          // malformed URL, ignore
        }
        // external links: ensure they open in new tab
        a.setAttribute("target", "_blank");
        a.setAttribute("rel", "noopener noreferrer");
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
