---
const {
  href = "#",
  title,
  metric,
  thumb = "/media/sample-1.jpg",
} = Astro.props;
---

<a href={href} class="block card overflow-hidden hover:shadow-md transition">
  <img src={thumb} alt={title} class="w-full h-48 object-cover" />
  <div class="p-5">
    <h3 class="font-semibold text-lg">{title}</h3>
    {metric && <p class="text-sm text-zinc-500 mt-1">{metric}</p>}
  </div>
</a>
