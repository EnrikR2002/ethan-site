---
const { id, title, eyebrow, prose = false } = Astro.props;
---

<section
  id={id}
  class={`section ${prose ? "prose prose-zinc max-w-none dark:prose-invert" : ""}`}
>
  <div class="container mx-auto px-4">
    {eyebrow && <div class="eyebrow mb-3">{eyebrow}</div>}
    {title && <h2 class="h2 mb-6">{title}</h2>}
    <slot />
  </div>
</section>
