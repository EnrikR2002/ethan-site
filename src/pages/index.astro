---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";

import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import Section from "../components/Section.astro";
import Stat from "../components/Stat.astro";
import CaseCard from "../components/CaseCard.astro";
import InfiniteCanvas from "../components/InfiniteCanvas.astro";
import StatsStrip from "../components/StatsStrip.astro";
import ServicesGrid from "../components/ServicesGrid.astro";
// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build

// ...existing code...

// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.

// Data for the InfiniteCanvas component
const canvasItems = [
  {
    id: "p1",
    type: "image",
    src: "/media/syfer-music.PNG",
    x: 0,
    y: 0,
    w: 860,
    h: 220,
    title: "Syfer Music",
  },
  {
    id: "p2",
    type: "image",
    src: "/media/sample-2.jpg",
    x: 420,
    y: 60,
    w: 320,
    h: 240,
    title: "Thumb 2",
  },
  {
    id: "v1",
    type: "youtube",
    src: "https://www.youtube.com/embed/XOYCQDbc1C0",
    x: 180,
    y: 360,
    w: 400,
    h: 240,
    title: "Video Demo",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Ethan — Portfolio</title>
    <meta
      name="description"
      content="Video + digital growth that converts: case studies, services, and booking."
    />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="bg-white text-zinc-900 dark:bg-zinc-950 dark:text-white">
    <Nav />

    <main>
      <!-- Hero -->
      <section id="hero" class="section">
        <div class="container px-6 md:px-8 lg:px-10">
          <div class="grid md:grid-cols-12 gap-10 items-center">
            <div class="md:col-span-7">
              <div class="eyebrow mb-3">Video • Growth • Brand</div>
              <h1 class="h1">
                I turn attention into <span class="text-brand-600"
                  >pipeline</span
                >.
              </h1>
              <p class="sub mt-4">
                Short‑form engines, long‑form trust, measurable outcomes. Book a
                15‑min intro and see if we can add revenue in 90 days.
              </p>
              <div class="mt-6 flex gap-3">
                <a href="#contact" class="btn">Book a call</a>
                <a href="#case-studies" class="btn-secondary"
                  >See case studies</a
                >
              </div>
            </div>
            <div class="md:col-span-5">
              <div class="grid grid-cols-3 gap-3">
                <Stat value="425%" label="YT subscriber growth" />
                <Stat value="24M+" label="Cross‑platform views" />
                <Stat value="120M" label="Project views" />
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Key Stats Strip -->
      <section id="stats" class="section">
        <div class="container px-6 md:px-8 lg:px-10">
          <StatsStrip />
        </div>
      </section>

      <!-- Taste -->
      <Section id="taste" title="Taste is the Multiplier" eyebrow="Ideas">
        <div class="container px-6 md:px-8 lg:px-10">
          <p>I will replace this placeholder paragraph with final copy.</p>
        </div>
      </Section>

      <!-- Services -->
      <section id="services" class="section">
        <div class="container px-6 md:px-8 lg:px-10">
          <ServicesGrid />
        </div>
      </section>

      <!-- Infinite Canvas -->
      <Section
        id="canvas"
        title="Highlights — Infinite Canvas (Flip to explore)"
        eyebrow="Explore"
      >
        <div class="container px-6 md:px-8 lg:px-10">
          <InfiniteCanvas items={canvasItems} />
        </div>
      </Section>

      <!-- Case Studies -->
      <section id="case-studies" class="section">
        <div class="container px-6 md:px-8 lg:px-10">
          <h2 class="h2 mb-6">Featured Work</h2>
          <div class="grid md:grid-cols-3 gap-6">
            <CaseCard
              title="Clinic Growth: 425% YT"
              metric="24M+ views across platforms"
              href="/work/clinic-growth"
            />
            <CaseCard
              title="UFC Shorts Engine"
              metric="120M views in < 12 months"
              href="/work/ufc-shorts"
            />
            <CaseCard
              title="Breakcore Community"
              metric="330k Twitter, 8k subreddit"
              href="/work/breakcore"
            />
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section id="cta" class="section">
        <div class="container px-6 md:px-8 lg:px-10 text-center">
          <h2 class="h2 mb-4">
            Let’s talk — bring me your vision, I’ll bring the taste.
          </h2>
          <a href="#contact" class="btn">Book a call</a>
        </div>
      </section>

      <!-- Keep existing contact form / section if present below -->
      <Section id="contact" title="Contact" eyebrow="Get in touch">
        <div class="container px-6 md:px-8 lg:px-10">
          <!-- existing contact form will remain here if present -->
          <slot name="contact" />
        </div>
      </Section>
    </main>
    <Footer />
  </body>
</html>
