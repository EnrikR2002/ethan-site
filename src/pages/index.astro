const canvasItems = [
  {
    id: "p1",
    type: "image",
    src: "/media/syfer-music.PNG",
    title: "Placeholder 1",
  },
  {
    id: "p2",
    type: "image",
    src: "/media/syfer-music.PNG",
    title: "Placeholder 2",
  },
  {
    id: "p3",
    type: "image",
    src: "/media/syfer-music.PNG",
    title: "Placeholder 3",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Ethan — Portfolio</title>
    <meta
      name="description"
      content="Video + digital growth that converts: case studies, services, and booking."
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-white text-zinc-900 dark:bg-zinc-950 dark:text-white">
    <Nav />

    <main>
      <!-- Hero -->
      <section id="hero" class="section">
        <div class="container px-6 md:px-8 lg:px-10">
          <div class="grid md:grid-cols-12 gap-10 items-center">
            <div class="md:col-span-7">
              <div class="eyebrow mb-3">Video • Growth • Brand</div>
              <h1 class="h1">
                I turn attention into <span class="text-brand-600"
                  >pipeline</span
                >.
              </h1>
              <p class="sub mt-4">
                Short‑form engines, long‑form trust, measurable outcomes. Book a
                15‑min intro and see if we can add revenue in 90 days.
              </p>
              <div class="mt-6 flex gap-3">
                <a href="#contact" class="btn">Book a call</a>
                <a href="#case-studies" class="btn-secondary"
                  >See case studies</a
                >
              </div>
            </div>
            <div class="md:col-span-5">
              <div class="grid grid-cols-3 gap-3">
                <Stat value="425%" label="YT subscriber growth" />
                <Stat value="24M+" label="Cross‑platform views" />
                <Stat value="120M" label="Project views" />
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Key Stats Strip -->
      <section id="stats" class="section">
        <div class="container px-6 md:px-8 lg:px-10">
          <h2 class="h2 mb-4">Key Results</h2>
          <StatsStrip />
        </div>
      </section>

      <!-- Taste -->
      <Section id="taste" title="Taste is the Multiplier" eyebrow="Ideas">
        <div class="container px-6 md:px-8 lg:px-10">
          <div class="prose taste-copy max-w-3xl mx-auto">
            <!-- REPLACE_ME: taste para 1 -->
            <p>
              In every industry, taste separates the forgettable from the
              iconic.
              <br />
              <br />
              Over the last decade, I've built and scaled audiences in music, gaming,
              and digital media — earning two YouTube Silver Play Buttons (100K+)
              for work in both music promotion and gaming video editing. I've also
              been an early adopter of AI in my workflows, using it to streamline
              production and spot opportunities faster — without ever losing the
              human taste that makes content resonate.
              <br />
              <br />
              From medical brands that turned my videos into booked clients, to UFC/MMA
              verticals hitting 120M+ views, to gaming channels pulling 45M+ long-form
              views, my projects don't just grow numbers — they redefine how a brand
              is perceived.
              <br />
              <br />
              Whatever the field, I bring a curator's eye, the instincts of a builder,
              and a track record of consistent scaling across every vertical I've
              touched.
            </p>
            <!-- REPLACE_ME: taste copy -->
          </div>
        </div>
      </Section>

      <!-- Services -->
      <section id="services" class="section">
        <div class="container px-6 md:px-8 lg:px-10">
          <h2 class="h2 mb-6">Services</h2>
          <ServicesGrid />
        </div>
      </section>

      <!-- Infinite Canvas -->
      <Section
        id="canvas"
        title="Highlights — Infinite Canvas (Flip to explore)"
        eyebrow="Explore"
      >
        <div class="container px-6 md:px-8 lg:px-10">
          <InfiniteCanvas items={canvasItems} />
        </div>
      </Section>

      <!-- Case Studies -->
      <section id="case-studies" class="section">
        <div class="container px-6 md:px-8 lg:px-10">
          <h2 class="h2 mb-6">Featured Work</h2>
          <div class="grid md:grid-cols-3 gap-6">
            <CaseCard
              title="Medical Brand Growth (YouTube)"
              metric="425% growth; 24M+ views in vertical"
              href="/work/medical-brand"
              thumb="/media/case-medical.svg"
            />
            <CaseCard
              title="UFC/MMA Shorts Engine"
              metric="120M+ views in vertical"
              href="/work/ufc-mma-channel"
              thumb="/media/case-ufc.svg"
            />
            <CaseCard
              title="Gaming Channel Long-Form"
              metric="45M+ long-form views"
              href="/work/gaming-channel"
              thumb="/media/case-gaming.svg"
            />
          </div>
        </div>
      </section>

      <!-- CTA -->
      <Section
        id="cta"
        title="Let’s talk — bring me your vision, I’ll bring the taste."
      >
        <div class="container px-6 md:px-8 lg:px-10 text-center">
          <p class="sub max-w-2xl mx-auto mb-6">
            Book a quick 15‑minute intro and we’ll scope a plan that moves the
            needle.
          </p>
          <div class="flex justify-center gap-3">
            <a href="#contact" class="btn">Book a call</a>
            <a href="#case-studies" class="btn-secondary">See case studies</a>
          </div>
        </div>
      </Section>

      <!-- Keep existing contact form / section if present below -->
      <Section id="contact" title="Contact" eyebrow="Get in touch">
        <div class="container px-6 md:px-8 lg:px-10">
          <!-- existing contact form will remain here if present -->
          <slot name="contact" />
        </div>
      </Section>
    </main>
    <Footer />
  </body>
</html>
